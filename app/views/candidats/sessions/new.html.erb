<div class="columns is-centered">
  <div class="box column is-one-third">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, 'Addresse mail', class: 'label' %>
        <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, 'Mot de passe', class: 'label' %>
        <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'checkbox' %>
          <%= f.label :remember_me, 'Se souvenir de moi', class: 'checkbox' %>
        </div>
      <% end %>

      <%= f.submit "Connexion candidat", class: 'button is-link is-medium is-rounded is-fullwidth' %>
    <% end %>
  </div>
</div>
<%= render "candidats/shared/links" %>
