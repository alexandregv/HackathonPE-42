<p id="notice"><%= notice %></p>

<h1>Membres</h1>

<table>
  <thead>
    <tr>
      <th>Mail</th>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Age</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @membres.each do |membre| %>
      <tr>
        <td><%= membre.mail %></td>
        <td><%= membre.nom %></td>
        <td><%= membre.prenom %></td>
        <td><%= membre.age %></td>
        <td><%= membre.type %></td>
        <td><%= link_to 'Show', membre %></td>
        <td><%= link_to 'Edit', edit_membre_path(membre) %></td>
        <td><%= link_to 'Destroy', membre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

